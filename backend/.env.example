# Backend Environment Variables

# PostgreSQL Database (Required)
DATABASE_URL=postgresql://user:password@host/optommarket_db

# MongoDB Database (Optional - for blogs, promotions, analytics)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/optommarket?retryWrites=true&w=majority

# Security
JWT_SECRET=your_super_secret_key_here
PORT=5000
NODE_ENV=development

# AI Chatbot & Description Generator (Required)
# Multiple keys separated by comma for rotation
GEMINI_API_KEY=AIzaSy...your_key_1,AIzaSy...your_key_2

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Telegram Bot (Optional - for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_id_or_channel_id
